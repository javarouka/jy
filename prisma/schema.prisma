generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

/// *
///  * 심리평가 기록
model AssessmentLog {
  id           Int      @id @default(autoincrement())
  clientName   String
  age          Int
  gender       String
  dx           String
  researchType String
  researchDate DateTime
  creditTime   Int ///  * 인정시간. 분
  usable       Boolean  @default(false)
  createdAt    DateTime @default(now())
  modifiedAt   DateTime @updatedAt
}

/// *
///  * 개인치료
model IndividualTherapyLog {
  id              Int      @id @default(autoincrement())
  clientName      String
  age             Int
  gender          String
  therapyType     String
  researchDate    DateTime /// * deprecated
  sessionCount    Int
  prepareTime     Int
  sessionTime     Int
  supervisionTime Int
  startDate       DateTime
  endDate         DateTime
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

/// *
///  * 그룹치료
model GroupTherapyLog {
  id              Int      @id @default(autoincrement())
  groupName       String
  therapyType     String
  researchDate    DateTime /// * deprecated
  sessionCount    Int
  prepareTime     Int
  sessionTime     Int
  supervisionTime Int
  startDate       DateTime
  endDate         DateTime
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

/// *
///  * 학술활동
model AcademicActivityLog {
  id           Int      @id @default(autoincrement())
  act          String ///  * 참석 발표. follower, following
  activityName String ///  * 회의명
  activityType String ///  * 회의 유형. '학술회의', '사례회의', '윤리교육'
  activityDate DateTime ///  * 활동일 (*)
  organization String ///  * 주관기관. '수련기관', '학회', '지회/연구회'
  sessionName  String ///  * 발표명
  creditTime   Int ///  * 인정시간. 분
  usable       Boolean  @default(false)
  createdAt    DateTime @default(now())
  modifiedAt   DateTime @updatedAt
}

/// *
///  * 연구로그
model ResearchLog {
  id              Int      @id @default(autoincrement())
  publishDate     DateTime ///  * 발간일 (*)
  pagerName       String ///  * 논문이름
  journalName     String ///  * 학회지
  participateType String ///  * 저자구분. 1저자, 공동저자
  creditTime      Int    ///  * 인정시간. 분
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

/// *
///  * 기타활동 로그
model OtherActivityLog {
  id              Int      @id @default(autoincrement())
  activitySummary String /// * 활동명, 간단한 활동 내용
  activityType    String /// * 활동유형. '대외협력', '기타 수련'
  startDate       DateTime /// * 활동시작일 (*)
  endDate         DateTime /// * 인정시간. 분
  creditTime      Int ///  * 인정시간. 분
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

/// *
///  * 수련 연차 정보
model TrainingYear {
  id          Int      @id @default(autoincrement())
  name        String   // 연차 이름 (예: '1년차')
  startDate   DateTime // 시작일
  endDate     DateTime // 종료일
  targetHours Int      // 목표 시간
  createdAt   DateTime @default(now())
  modifiedAt  DateTime @updatedAt
}

/// *
///  * 심리평가 목표
model AssessmentTarget {
  id                 Int      @id @default(autoincrement())
  totalCreditMinutes Int      // 심리평가 총 인정시간
  caseCount          Int      // 종합심리평가 사례 수
  createdAt          DateTime @default(now())
  modifiedAt         DateTime @updatedAt
}

/// *
///  * 학술활동 목표
model AcademicTarget {
  id                             Int      @id @default(autoincrement())
  ethicsEducationJoinCount       Int      // 윤리교육 참여
  caseConferencePresentationCount Int      // 사례회의 발표 횟수
  thesisPresentationCount        Int      // 논문발표 횟수
  academicConferenceJoinMinutes  Int      // 학술회의 참여 인정시간
  caseConferenceJoinMinutes      Int      // 사례회의 참여 인정시간
  createdAt                      DateTime @default(now())
  modifiedAt                     DateTime @updatedAt
}

/// *
///  * 기타활동 목표
model OtherActivityTarget {
  id                           Int      @id @default(autoincrement())
  externalCooperationCreditMinutes Int      // 대외협력 인정시간
  createdAt                    DateTime @default(now())
  modifiedAt                   DateTime @updatedAt
}

/// *
///  * 연구 목표
model ResearchTarget {
  id                Int      @id @default(autoincrement())
  totalResearchCount Int      // 총 연구 수
  createdAt         DateTime @default(now())
  modifiedAt        DateTime @updatedAt
}

/// *
///  * 심리치료 목표
model TherapyTarget {
  id                         Int      @id @default(autoincrement())
  totalCreditMinutes         Int      // 심리치료 총 인정시간
  primaryTherapistCreditMinutes Int      // 주치료자 인정시간
  primaryTherapistCaseCount  Int      // 주치료자 사례 수
  createdAt                  DateTime @default(now())
  modifiedAt                 DateTime @updatedAt
}
