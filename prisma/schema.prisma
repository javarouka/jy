generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

/// *
///  * 심리평가 기록
model AssessmentLog {
  id           Int      @id @default(autoincrement())
  clientName   String
  age          Int
  gender       String
  dx           String
  researchType String
  researchDate DateTime
  creditTime   Int
  usable       Boolean  @default(false)
  createdAt    DateTime @default(now())
  modifiedAt   DateTime @updatedAt
}

/// *
///  * 개인치료
model IndividualTherapyLog {
  id              Int      @id @default(autoincrement())
  clientName      String
  age             Int
  gender          String
  therapyType     String
  researchDate    DateTime
  sessionCount    Int
  prepareTime     Int
  sessionTime     Int
  supervisionTime Int
  startDate       DateTime
  endDate         DateTime
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

/// *
///  * 그룹치료
model GroupTherapyLog {
  id              Int      @id @default(autoincrement())
  groupName       String
  therapyType     String
  researchDate    DateTime
  sessionCount    Int
  prepareTime     Int
  sessionTime     Int
  supervisionTime Int
  startDate       DateTime
  endDate         DateTime
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

/// *
///  * 학술활동
model AcademicActivityLog {
  id           Int      @id @default(autoincrement())
  act          String
  activityName String
  activityType String
  activityDate DateTime
  organization String
  sessionName  String
  creditTime   Int
  usable       Boolean  @default(false)
  createdAt    DateTime @default(now())
  modifiedAt   DateTime @updatedAt
}

/// *
///  * 연구로그
model ResearchLog {
  id              Int      @id @default(autoincrement())
  publishDate     DateTime
  pagerName       String
  journalName     String
  participateType String
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}

model OtherActivityLog {
  id              Int      @id @default(autoincrement())
  activitySummary String
  activityType    String
  startDate       DateTime
  endDate         DateTime
  creditTime      Int
  usable          Boolean  @default(false)
  createdAt       DateTime @default(now())
  modifiedAt      DateTime @updatedAt
}
